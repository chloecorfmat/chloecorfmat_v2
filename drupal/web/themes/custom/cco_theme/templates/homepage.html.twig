<div class="hp-hero">
  <div class="block">
    <div class="hp-hero__col">
      {% set media = hero.photo %}
      {% if media.field_media_image.entity %}
        {% set uri = media.field_media_image.entity.uri.value %}
        {% set alt = media.field_media_image.alt %}
        <div class="img__container">
          <img
            src="{{ file_url(uri) }}"
            alt=""
          >
        </div>
      {% endif %}
    </div>
    <div class="hp-hero__col">
      <h1>{{ hero.title }}</h1>
      <p>{{ hero.description|raw }}</p>
      <a href="{{ hero.cta.url }}" target="{{ '_' ~ hero.cta.target }}" class="btn">
        {{ hero.cta.text }}
      </a>
    </div>
  </div>
  <div class="hp-hero__background">
  </div>
</div>

<div class="hp-situations">
  <div class="block">
    <div class="hp-situations__title">
      <h2>{{ situations.title }}</h2>
      <div class="hp-situations__title-img">
        <img src="/themes/custom/cco_theme/assets/asset-sticker-book.png" alt="" />
      </div>
    </div>


    {% if situations.situations is not empty %}
      <ul class="hp-situations__list">
        {% for situation in situations.situations %}
          <li>
            <h3>{{ situation.title }}</h3>
            <div>
              {{ situation.description|raw }}
            </div>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>

<div class="hp-podcast">
  <div class="block">
    <div class="hp-podcast__content">
      <div class="hp-podcast__content-header">
        <div class="hp-podcast__content-header-img">
          <img src="/themes/custom/cco_theme/assets/asset-sticker-podcast-white.png" alt="">
        </div>
        <div class="hp-podcast__content-header-content">
          <h2>{{ podcast.title }}</h2>
        </div>
      </div>

      <div class="hp-podcast__content-description">
        <div class="wysiwyg">
          {{ podcast.description|raw }}
        </div>
      </div>

      <div class="hp-podcast__content-platforms">
        <p class="hp-podcast__content-platforms-title">
          <strong>{{ podcast.platforms.text }}</strong>
        </p>

        {% if podcast.platforms.platforms is not empty %}
          <ul class="hp-podcast__content-platforms-list">
            {% for platform in podcast.platforms.platforms %}
              <li class="hp-podcast__content-platforms-list-item">
                <a href="{{ platform.url }}" title="{{ platform.name ~ ' - Nouvelle fenêtre' }}">
                  <img src="{{ file_url(platform.logo) }}" alt="" />
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="hp-podcast__content-transcription">
        <p class="hp-podcast__content-transcription-text">
          <strong>{{ podcast.transcription.text }}</strong>
        </p>
        <a href="{{ podcast.transcription.cta.url }}" target="{{ '_' ~ podcast.transcription.cta.target }}" class="btn">
          {{ podcast.transcription.cta.text }}
        </a>
      </div>
    </div>
    <div class="hp-podcast__mascotte">
      <img src="{{ file_url(podcast.mascotte) }}" alt="">
    </div>
  </div>
</div>
<div class="hp-podcast__banner" aria-hidden="true">
  <div class="hp-podcast__banner-marquee">
    {% set words = '' %}
    {% for word in podcast.banner %}
      {% set words = words ~ ' ' ~ word.value %}
    {% endfor %}

    {% for i in 1..2 %}
      {% set words = words ~ ' ' ~ words %}
    {% endfor %}

    <p class="hp-podcast__banner-list" data-text="{{ words }}">
      {{ words }}
    </p>
    <p class="hp-podcast__banner-list" data-text="{{ words }}">
      {{ words }}
    </p>
  </div>
</div>

